{
  "kernel": {
    "version": "1.0.0",
    "environment": "development",
    "debug_mode": true,
    "orchestration_mode": "skills_first",
    "fallback_strategy": "cascade"
  },
  "ai_models": {
    "primary": {
      "provider": "openai",
      "model": "gpt-4-turbo-preview",
      "api_key_env": "OPENAI_API_KEY",
      "endpoint": "https://api.openai.com/v1",
      "max_tokens": 4096,
      "temperature": 0.7,
      "timeout": 30
    },
    "fallback_chain": [
      {
        "provider": "claude",
        "model": "claude-3-sonnet-20240229",
        "api_key_env": "CLAUDE_API_KEY",
        "endpoint": "https://api.anthropic.com",
        "max_tokens": 4096,
        "temperature": 0.7,
        "timeout": 30
      },
      {
        "provider": "github_copilot",
        "model": "gpt-4",
        "api_key_env": "GITHUB_TOKEN",
        "endpoint": "https://api.githubcopilot.com",
        "max_tokens": 4096,
        "temperature": 0.7,
        "timeout": 30
      },
      {
        "provider": "microsoft_copilot",
        "model": "gpt-4",
        "api_key_env": "MICROSOFT_COPILOT_API_KEY",
        "endpoint": "https://api.bing.microsoft.com/v7.0/chat",
        "max_tokens": 4096,
        "temperature": 0.7,
        "timeout": 30
      },
      {
        "provider": "gemini",
        "model": "gemini-1.5-pro",
        "api_key_env": "GEMINI_API_KEY",
        "endpoint": "https://generativelanguage.googleapis.com/v1beta",
        "max_tokens": 4096,
        "temperature": 0.7,
        "timeout": 30
      }
    ]
  },
  "plugins": {
    "authentication": {
      "enabled": true,
      "providers": ["oauth2", "api_key", "basic_auth"],
      "token_refresh_interval": 3600,
      "encryption_key_env": "SK_ENCRYPTION_KEY"
    },
    "memory": {
      "provider": "text_memory_skill",
      "storage_type": "in_memory",
      "max_entries": 1000,
      "ttl_seconds": 3600,
      "compression_enabled": true,
      "search_enabled": true,
      "embedding_model": "text-embedding-ada-002"
    },
    "logging": {
      "level": "INFO",
      "format": "json",
      "handlers": ["console", "file"],
      "file_path": "./logs/semantic_kernel.log",
      "max_file_size_mb": 10,
      "backup_count": 5
    }
  },
  "skill_discovery": {
    "auto_discovery": true,
    "scan_paths": ["./main/skills/", "./plugins/"],
    "manifest_pattern": "*.json",
    "load_priority": ["core", "essential", "extended", "experimental"],
    "hot_reload": true,
    "validation_strict": true
  },
  "routing": {
    "strategy": "priority_weighted",
    "cache_enabled": true,
    "cache_ttl_seconds": 300,
    "circuit_breaker": {
      "enabled": true,
      "failure_threshold": 5,
      "recovery_timeout": 60,
      "half_open_max_calls": 3
    },
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 120,
      "burst_allowance": 20
    }
  },
  "security": {
    "input_sanitization": true,
    "output_filtering": true,
    "allowed_domains": ["*"],
    "blocked_domains": [],
    "api_key_rotation": {
      "enabled": false,
      "rotation_interval_days": 30
    },
    "audit_logging": {
      "enabled": true,
      "include_payloads": false,
      "retention_days": 90
    }
  },
  "performance": {
    "max_concurrent_requests": 10,
    "request_timeout_seconds": 30,
    "connection_pool_size": 20,
    "enable_compression": true,
    "metrics_collection": true,
    "health_check_interval": 60
  },
  "signals": {
    "global_handlers": {
      "skill_loaded": "log_skill_activation",
      "skill_error": "handle_skill_error",
      "model_switched": "log_model_fallback",
      "memory_updated": "update_context_cache"
    },
    "propagation": {
      "bubble_up": true,
      "async_processing": true,
      "max_queue_size": 1000
    }
  },
  "development": {
    "skill_hot_reload": true,
    "debug_output": true,
    "profiling_enabled": false,
    "test_mode": true,
    "mock_external_calls": true
  }
}
