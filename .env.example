# Skynet Core Environment Configuration
# Copy this file to .env and configure your cloud AI API keys
# Skynet Core is cloud-first - at least one AI provider API key is required

# =============================================================================
# CLOUD AI MODEL PROVIDERS (Choose at least one)
# =============================================================================

# OpenAI (Primary recommendation)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Claude (Advanced reasoning)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Gemini (Multimodal AI)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-pro

# GitHub Copilot (Developer assistant)
# Note: Requires enterprise/custom endpoint access
GITHUB_COPILOT_TOKEN=your_github_copilot_token_here
COPILOT_API_URL=https://api.github.com/copilot/chat/completions
COPILOT_MODEL=copilot

# Microsoft Copilot (Enterprise AI assistant)
# Microsoft's AI assistant (formerly Bing Chat)
# Requires Azure Cognitive Services or Microsoft Graph API access
MICROSOFT_COPILOT_API_KEY=your_microsoft_copilot_api_key_here
MICROSOFT_COPILOT_ENDPOINT=https://api.cognitive.microsoft.com/copilot/v1/chat/completions
MICROSOFT_COPILOT_MODEL=copilot

# =============================================================================
# WEB SEARCH PROVIDERS
# =============================================================================

# DuckDuckGo (Default - No API key required)
# Automatically enabled, privacy-focused search

# Azure Bing Search
AZURE_SEARCH_KEY=your_azure_search_key_here
AZURE_SEARCH_ENDPOINT=https://your-resource.cognitiveservices.azure.com/bing/v7.0/search

# Google Custom Search
GOOGLE_CSE_API_KEY=your_google_api_key_here
GOOGLE_CX=your_custom_search_engine_id_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Web Interface
FLASK_ENV=development
FLASK_DEBUG=true
WEB_PORT=5000
WEB_HOST=localhost

# Logging
LOG_LEVEL=INFO
LOG_FILE=skynet.log

# Memory & Chat
MAX_CONVERSATION_TURNS=10
MEMORY_PERSIST=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Debug modes
DEBUG_AI_RESPONSES=false
DEBUG_WEB_SEARCH=false
DEBUG_MEMORY=false

# Performance
ASYNC_TIMEOUT=30
MAX_RETRIES=3
BACKOFF_FACTOR=2
